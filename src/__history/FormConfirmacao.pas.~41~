unit FormConfirmacao;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes,
  Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.Buttons;

type
  TConfirmacao = class(TForm)
    pnlLabel: TPanel;
    Lbl1: TLabel;
    pnlEdit: TPanel;
    Edt1: TEdit;
    pnlBotoes: TPanel;
    Btn1: TPanel;
    Btn2: TPanel;
    procedure Btn1Click(Sender: TObject);
    procedure Btn2Click(Sender: TObject);
    procedure Edt1KeyPress(Sender: TObject; var Key: Char);
    procedure FormCreate(Sender: TObject);
  private
    FEditText: String;
    function SetEditText: String;
  public
    property EditText: String read SetEditText write FEditText;
  end;
var
  Confirmacao: TConfirmacao;

implementation

{$R *.dfm}

{ TConfirmacao }

procedure TConfirmacao.Btn1Click(Sender: TObject);
begin
  ModalResult := mrOk;
end;

procedure TConfirmacao.Btn2Click(Sender: TObject);
begin
  ModalResult := mrCancel;
  Confirmacao.Close;
end;

procedure TConfirmacao.Edt1KeyPress(Sender: TObject; var Key: Char);
begin
  if Key = #13 then
  begin
    Btn1Click(Self);
  end;
end;

procedure TConfirmacao.FormCreate(Sender: TObject);
begin
  Lbl1.Width := 380;
end;


function TConfirmacao.SetEditText: String;
begin
  Result := FEditText;
end;

end.

